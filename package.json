{
  "name": "create-nft-app",
  "version": "0.0.1",
  "description": "One-command setup for Polkadot NFT projects",
  "main": "bin/cli.js",
  "bin": {
    "create-nft-app": "./bin/cli.js"
  },
  "files": [
    "bin",
    "templates"
  ],
  "homepage": "https://github.com/NFTMozaic/create-nft-app",
  "bugs": {
    "url": "https://github.com/NFTMozaic/create-nft-app/issues"
  },
  "scripts": {
    "global-link": "pnpm unlink --global && pnpm link --global",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run lint && pnpm run format:check",
    "fix": "pnpm run lint:fix && pnpm run format",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "local-release": "changeset publish"
  },
  "keywords": [
    "polkadot",
    "nft",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.27.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3"
  },
  "packageManager": "pnpm@10.11.0"
}
